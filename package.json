    "devDependencies": {
        "@react-router/dev": "^7.2.0",
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^20",
        "@types/pg": "^8.11.11",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.1",
        "drizzle-kit": "^0.30.4",
        "react-router-devtools": "^1.1.0",
